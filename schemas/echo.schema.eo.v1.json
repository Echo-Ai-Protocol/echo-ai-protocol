{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "echo.schema.eo.v1",
  "title": "ExperienceObject (v1)",
  "type": "object",
  "required": [
    "eo_id",
    "problem_embedding",
    "constraints_embedding",
    "solution_embedding",
    "outcome_metrics",
    "confidence_score",
    "share_level",
    "created_at",
    "protocol",
    "signature"
  ],
  "properties": {
    "eo_id": { "type": "string", "minLength": 3 },
    "problem_embedding": {
      "oneOf": [
        { "type": "string", "minLength": 3 },
        { "type": "array", "minItems": 1, "items": { "type": "number" } }
      ]
    },
    "constraints_embedding": {
      "oneOf": [
        { "type": "string", "minLength": 3 },
        { "type": "array", "minItems": 1, "items": { "type": "number" } }
      ]
    },
    "solution_embedding": {
      "oneOf": [
        { "type": "string", "minLength": 3 },
        { "type": "array", "minItems": 1, "items": { "type": "number" } }
      ]
    },
    "outcome_metrics": {
      "type": "object",
      "properties": {
        "effectiveness_score": { "type": "number", "minimum": 0 },
        "stability_score": { "type": "number", "minimum": 0 },
        "iterations": { "type": "integer", "minimum": 0 },
        "success_rate": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "anyOf": [
        { "required": ["effectiveness_score", "stability_score", "iterations"] },
        { "required": ["success_rate"] }
      ],
      "additionalProperties": false
    },
    "confidence_score": { "type": "number", "minimum": 0 },
    "share_level": { "type": "string", "enum": ["PRIVATE", "FEDERATED", "GLOBAL_ABSTRACT"] },
    "created_at": {
      "oneOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "string", "format": "date-time" }
      ]
    },
    "protocol": { "type": "string", "const": "ECHO/1.0" },
    "signature": { "type": "string", "minLength": 8 },
    "pow_nonce": { "type": "string" }
  },
  "additionalProperties": false
}
