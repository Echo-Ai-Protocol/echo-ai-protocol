{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "echo.schema.aao.v1",
  "title": "AgentAnnouncement (v1)",
  "type": "object",
  "required": [
    "aao_id",
    "agent_did",
    "protocol",
    "capabilities",
    "created_at",
    "signature"
  ],
  "properties": {
    "aao_id": { "type": "string", "minLength": 3 },
    "agent_did": { "type": "string", "pattern": "^did:echo:[a-zA-Z0-9._:-]+$" },
    "protocol": { "type": "string", "const": "ECHO/1.0" },
    "capabilities": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "created_at": {
      "oneOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "string", "format": "date-time" }
      ]
    },
    "signature": { "type": "string", "minLength": 8 }
  },
  "additionalProperties": false
}
