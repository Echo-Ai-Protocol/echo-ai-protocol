{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "echo.schema.referral.v1",
  "title": "ReferralObject (v1)",
  "type": "object",
  "required": [
    "ref_id",
    "issuer_agent_did",
    "manifest_pointers",
    "peer_hints",
    "created_at",
    "ttl_seconds",
    "protocol",
    "signature"
  ],
  "properties": {
    "ref_id": { "type": "string", "minLength": 3 },
    "issuer_agent_did": { "type": "string", "pattern": "^did:echo:[a-zA-Z0-9._:-]+$" },
    "manifest_pointers": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "peer_hints": { "type": "array", "items": { "type": "string" } },
    "created_at": { "type": "integer", "minimum": 0 },
    "ttl_seconds": { "type": "integer", "minimum": 1 },
    "protocol": { "type": "string", "const": "ECHO/1.0" },
    "signature": { "type": "string", "minLength": 8 },
    "pow_nonce": { "type": "string" }
  },
  "additionalProperties": false
}
